[module/bspwm]
type = internal/bspwm
inherit = module/workspaces

format= <label-state>

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2
label-occupied-underline= ${colors.foreground-alt}

label-urgent = %icon%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3
inherit = module/workspaces

format= <label-state>

label-focused = %icon%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-visible = %icon%
label-visible-background = ${colors.background-alt2}
label-visible-underline= ${colors.primary-alt}
label-visible-padding = 2

label-unfocused = %icon%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2

pin-workspaces = true
strip-wsnumbers = false
enable-click = true
enable-scroll = false



[module/mpd]
type = internal/mpd

host = /tmp/mpdsocket
port = 6600

format-online = <icon-prev><icon-stop><toggle><icon-next>  <label-song>  <bar-progress>
format-underline = #FFFFFF

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song = |  %artist%  |  %title%  |
label-song-maxlen = 60
label-song-ellipsis = true

bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─



[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icon}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.icon}
label = %percentage_used%%



[module/wifi]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
format-disconnected =

label-connected = %essid% (%signal%%)

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-foreground = ${colors.icon}

[module/lan]
type = internal/network
interface = enp0s25
interval = 3.0

format-connected = <label-connected>
format-disconnected =

label-connected = LAN

[module/date]
type = internal/date
interval = 5

date =
date-alt = " %Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-prefix = 
format-prefix-foreground = ${colors.icon}

label = %date% %time%



[module/volume]
