URxvt.perl-ext-common: default,tabbedex,clipboard,font-size

!appearance
URxvt.font: xft:Terminus:size=14
URxvt.internalBorder: 8
URxvt.cursorBlink: 1
URxvt.scrollBar: false
URxvt.scrollstyle: plain
URxvt.geometry: 90x27
URxvt.iso14755: false
URxvt.dynamicColors: on

!tabs
URxvt.tabbed.tabbar-fg: -2
URxvt.tabbed.tabbar-bg: -1
URxvt.tabbed.tab-fg: 15
URxvt.tabbed.tab-bg: 131
URxvt.tabbed.autohide: true
URxvt.tabbed.new-button: false
URxvt.tabbed.title: false

!clipboard
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste
Urxvt.clipboard.autocopy: false

!font-size
URxvt.keysym.Control-plus: perl:font-size:increase
URxvt.keysym.Control-minus: perl:font-size:decrease
URxvt.keysym.Control-KP_Add: perl:font-size:increase
URxvt.keysym.Control-KP_Subtract: perl:font-size:decrease
URxvt.keysym.Control-0: perl:font-size:reset
URxvt.keysym.Control-KP_0: perl:font-size:reset
URxvt.font-size.step: 1

