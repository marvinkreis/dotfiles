bak () {
    for file in $@; do
        cp $file:A $file:A.bak;
    done
}

safe_stow() {
    if [[ $(pwd) == "/home/marvin/dotfiles" ]]; then
        /usr/bin/stow --verbose=2 $*
    else
        echo "Wrong directory!"
    fi
}

buptime() {
    echo "Buptime: (•ᴗ•) days, (•ᴗ•), hours, (•ᴗ•) minutes, (•ᴗ•) seconds."
}
