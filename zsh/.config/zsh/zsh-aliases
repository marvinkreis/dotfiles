alias -g tobg="&> /dev/null &; disown"

alias dirs="dirs -v"
alias grep="echo Use ack! #"
alias j=jump
alias latexrun='latexrun -O /tmp/latexrun --latex-args="--shell-escape -synctex=1"'
alias ls="ls --color=auto --group-directories-first -1"
alias mkdir="mkdir -p"
alias n="start-in-background"
alias o="exo-open"
alias r="echo disabled"
alias rm="rm -vI"
alias s=search
alias sc=systemctl
alias scat=pygmentize
alias svim="sudo -E vim"

alias copy="xclip -in -selection clipboard"
alias paste="xclip -out -selection clipboard"

alias gs="git status"
alias ga="git add"
alias gc="git commit"
alias gpl="git pull"
alias gps="git push"
alias gd="git diff"
alias gcd="git clone --depth=1"
alias gr="git reset"
alias gco="git checkout"
