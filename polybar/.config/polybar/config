[settings]
screenchange-reload = true
compositing-background = source





[colors]
background = #1c1c1c
background-alt = #4D3A3A
background-alt2 = #463F3F
foreground = #EEEEEE
foreground-alt = #555555
primary = #F2A5A1
primary-alt = #D1C2C1
secondary = #EFB7CD
alert = #D64937
icon = #999999
i3 = #285577





[bar/main]
height = 22
offset-x = 0
offset-y = 0
radius = 0.0
fixed-center = true

padding-left = 8
padding-right = 4
module-margin-right = 4

background = ${colors.background}
foreground = ${colors.foreground}
border-color = ${xrdb:color8:#b3b3b3}

border-size = 0
line-size = 2

font-0 = DejaVu Sans:style=Regular:pixelsize=10;1
font-1 = Siji:style=Regular:pixelsize=10;1





[bar/notebook-eDP1]
monitor = eDP1
inherit = bar/main
modules-left = i3
modules-center =
modules-right = volume notebook-brightness memory cpu notebook-battery notebook-snd-battery notebook-temperature time date notebook-wifi notebook-lan
tray-position = right

[bar/notebook-HDMI1]
monitor = HDMI1
inherit = bar/main
modules-left = i3
modules-center =
modules-right = volume memory cpu notebook-battery notebook-snd-battery notebook-temperature time date notebook-wifi notebook-lan
tray-position = right

[bar/notebook-DP1]
monitor = DP1
inherit = bar/main
modules-left = i3
modules-center =
modules-right = volume memory cpu notebook-battery notebook-snd-battery notebook-temperature time date notebook-wifi notebook-lan
tray-position = right





[bar/desktop-DP-0]
monitor = DP-0
inherit = bar/main
modules-left = i3
modules-center =
modules-right = volume memory cpu desktop-cputemp desktop-gputemp time date
tray-position = right

[bar/desktop-HDMI-0]
monitor = HDMI-0
inherit = bar/main
modules-left = i3
modules-center =
modules-right = volume memory cpu desktop-cputemp desktop-gputemp time date
tray-position = right





[module/bspwm]
type = internal/bspwm

format= <label-state>

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-occupied = %index%
label-occupied-padding = 2
label-occupied-underline= ${colors.foreground-alt}

label-urgent = %index%
label-urgent-background = ${colors.alert}
label-urgent-padding = 2

label-empty = %index%
label-empty-foreground = ${colors.foreground-alt}
label-empty-padding = 2

[module/i3]
type = internal/i3

format= <label-state>

label-focused = %index%
label-focused-background = ${colors.background-alt}
label-focused-underline= ${colors.primary}
label-focused-padding = 2

label-visible = %index%
label-visible-background = ${colors.background-alt2}
label-visible-underline= ${colors.primary-alt}
label-visible-padding = 2

label-unfocused = %index%
label-unfocused-background = ${colors.background}
label-unfocused-padding = 2

pin-workspaces = true
strip-wsnumbers = false
enable-click = true
enable-scroll = false





[module/mpd]
type = internal/mpd

host = /tmp/mpdsocket
port = 6600

format-online = <icon-prev><icon-stop><toggle><icon-next>  <label-song>  <bar-progress>
format-underline = #FFFFFF

icon-prev = 
icon-stop = 
icon-play = 
icon-pause = 
icon-next = 

label-song = |  %artist%  |  %title%  |
label-song-maxlen = 60
label-song-ellipsis = true

bar-progress-width = 10
bar-progress-indicator = |
bar-progress-fill = ─
bar-progress-empty = ─





[module/volume]
type = internal/pulseaudio

format-volume = <label-volume>
format-volume-prefix = " "
format-volume-prefix-foreground = ${colors.icon}

label-volume = %percentage%%

format-muted-prefix = " "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

[module/cpu]
type = internal/cpu
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.icon}
label = %percentage%%

[module/memory]
type = internal/memory
interval = 5
format-prefix = " "
format-prefix-foreground = ${colors.icon}
label = %percentage_used%%

[module/time]
type = internal/date
interval = 5

time = %H:%M

format-prefix = " "
format-prefix-foreground = ${colors.icon}

label = %time%

[module/date]
type = internal/date
interval = 5

date = %d.%m.%Y%

format-prefix = " "
format-prefix-foreground = ${colors.icon}

label = %date%





[module/notebook-brightness]
type = internal/xbacklight

card = intel_backlight

format = <label>
format-prefix = " "
format-prefix-foreground = ${colors.icon}

label = %percentage%%

[module/notebook-temperature]
type = internal/temperature
interval = 5

thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-warn = <ramp> <label-warn>

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.icon}

[module/notebook-battery]
type = internal/battery

poll-interval = 5

battery = BAT0
adapter = AC
full-at = 98

format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>

format-full-prefix = " "
format-full-prefix-foreground = ${colors.icon}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.icon}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.icon}
animation-charging-framerate = 750

[module/notebook-snd-battery]
inherit = module/notebook-battery
battery = BAT1

[module/notebook-wifi]
type = internal/network
interval = 5

interface = wlp3s0

format-connected = <ramp-signal> <label-connected>
format-disconnected =

label-connected = %essid% (%signal%%)

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-foreground = ${colors.icon}

[module/notebook-lan]
type = internal/network
interval = 5

interface = enp0s25

format-connected = <label-connected>
format-disconnected =

label-connected = LAN





[module/desktop-gputemp]
type = custom/script
interval = 5

exec = gputemp
tail = false

label = %output%°C
format-prefix = 
format-prefix-foreground = ${colors.icon}

[module/desktop-cputemp]
type = custom/script
interval = 5

exec = cputemp
tail = false

label = %output%°C
format-prefix = 
format-prefix-foreground = ${colors.icon}

