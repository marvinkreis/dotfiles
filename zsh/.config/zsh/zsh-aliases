alias j=jump
alias latexrun='latexrun -O /tmp/latexrun --latex-args="--shell-escape -synctex=1"'
alias ls="ls --color=auto --group-directories-first -1"
alias mkdir="mkdir -p"
alias n="start-in-background"
alias o="exo-open"
alias pdfgrep="pdfgrep -Ri"
alias r="echo disabled"
alias rm="rm -vI"
alias rg="rg -S"
alias sc=systemctl
alias scat="nvimpager -c"
alias svim="sudo -E vim"

alias copy="xclip -in -selection clipboard"
alias paste="xclip -out -selection clipboard"

