label-warn-foreground = ${colors.secondary}

ramp-0 = 
ramp-1 = 
ramp-2 = 
ramp-foreground = ${colors.icon}



[module/gputemp]
type = custom/script

exec = gputemp
tail = false
interval = 30

label = %output%°C
format-prefix = 

[module/cputemp]
